<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnGesAlq"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="52dp"
        app:cornerRadius="20dp"
        android:drawableLeft="@drawable/ic_register"
        android:drawableTint="@color/color1"
        android:text="Alquileres"
        android:textColor="@color/color1"
        android:textSize="20dp"
        android:backgroundTint="@color/color2"/>

    <Button
        android:id="@+id/btnGesCln"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/color2"
        android:drawableLeft="@drawable/ic_people"
        android:drawableTint="@color/color1"
        android:text="Clientes"
        android:textColor="@color/color1"
        android:textSize="20dp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnGesVhcl"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/color2"
        android:drawableLeft="@drawable/ic_cars"
        android:drawableTint="@color/color1"
        android:text="Vehiculos"
        android:textColor="@color/color1"
        android:textSize="20dp"
        app:cornerRadius="20dp"/>

</LinearLayout>